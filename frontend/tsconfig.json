{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false, // Set this to false (REMOVE THIS COMMENT LINE)
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": false // Set this to false or remove it to emit JavaScript output
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../forgedMartchatbot/utils/OpenAIStream.ts",
    "middleware.ts",
    "./types/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
