{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "esModuleInterop": true,
    "module": "esnext", // Change to "esnext" if using React, otherwise leave as "CommonJS"
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Change to "react" if using React
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../forgedMartchatbot/utils/OpenAIStream.ts",
    "middleware.js",
    "./types/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
